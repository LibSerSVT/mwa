<server description="microwebapp">

    <!-- Enable features -->
    <featureManager>
        <feature>microProfile-5.0</feature>
        <feature>pages-3.0</feature>
    </featureManager>

    <httpEndpoint id="defaultHttpEndpoint"
        host="*"
        httpPort="8080"
        httpsPort="8443" />

    <webApplication location="${server.config.dir}/apps/microwebapp.war" name="microwebapp" contextRoot="/microwebapp" />

</server>
